<p id="notice"><%= notice %></p>

<h1>Products</h1>
<%= link_to "View Your Current Cart", cart_path(current_cart), :class => 'w3-button w3-border w3-border-blue w3-round w3-hover-purple'%>
<table class="w3-table-all">
  <thead>
    <tr class= "w3-cyan">
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= strip_tags(product.description) %></td>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td> <%= button_to 'Add to Cart', line_items_path(product_id: product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

